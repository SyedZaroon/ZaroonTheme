  // logo
  {
    "name": "t:general.logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "t:general.logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "t:general.logo_width",
        "min": 50,
        "max": 300,
        "step": 5,
        "default": 150,
        "unit": "px"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "t:general.favicon"
      }
    ]
  },
  // Colors

 {
  "name": "t:general.colors",
  "settings": [
    {
      "type": "color_scheme_group",
      "id": "color_schemes",
      "definition": [
        {
          "type": "color",
          "id": "background",
          "label": "t:settings_schema.colors.settings.background.label",
          "default": "#FFFFFF"
        },
        {
          "type": "color_background",
          "id": "background_gradient",
          "label": "t:settings_schema.colors.settings.background_gradient.label",
          "info": "t:settings_schema.colors.settings.background_gradient.info"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "t:settings_schema.colors.settings.heading_color.label",
          "default": "#FB740F"
        },
        {
          "type": "color",
          "id": "text",
          "label": "t:settings_schema.colors.settings.text.label",
          "default": "#242424"
        },
        {
          "type": "color",
          "id": "sub_text",
          "label": "t:labels.sub_text",
          "default": "#242424"
        }
      ],
      "role": {
        "text": "text",
        "background": {
          "solid": "background",
          "gradient": "background_gradient"
        },
        "icons": "text",
        "links": "text",
        "primary_button": "background",
        "on_primary_button": "text",
        "primary_button_border": "background",
        "secondary_button": "background",
        "on_secondary_button": "text",
        "secondary_button_border": "text"
      }
    }
  ]
},
  // Typography
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "t:general.primary"
      },
      {
        "type": "font_picker",
        "id": "type_secondary_font",
        "default": "work_sans_n4",
        "label": "t:general.secondary"
      },
      {
        "type": "header",
        "content": "Typography Scale"
      },
      {
        "type": "range",
        "id": "body_font_size",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "Body font size",
        "default": 14
      },
      {
        "type": "range",
        "id": "h1_font_size",
        "min": 24,
        "max": 72,
        "step": 2,
        "unit": "px",
        "label": "H1 font size",
        "default": 36
      },
      {
        "type": "range",
        "id": "h2_font_size",
        "min": 20,
        "max": 48,
        "step": 2,
        "unit": "px",
        "label": "H2 font size",
        "default": 30
      },
      {
        "type": "range",
        "id": "h3_font_size",
        "min": 18,
        "max": 36,
        "step": 1,
        "unit": "px",
        "label": "H3 font size",
        "default": 24
      },
      {
        "type": "range",
        "id": "line_height",
        "min": 120,
        "max": 200,
        "step": 5,
        "unit": "%",
        "label": "Body line height",
        "default": 150
      },
      {
        "type": "select",
        "id": "heading_font_weight",
        "options": [
          {
            "value": "normal",
            "label": "Normal"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "semibold",
            "label": "Semibold"
          },
          {
            "value": "bold",
            "label": "Bold"
          },
          {
            "value": "extrabold",
            "label": "Extra Bold"
          }
        ],
        "default": "bold",
        "label": "Heading font weight"
      }
    ]
  },
